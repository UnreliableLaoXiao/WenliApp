<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_layout"
    android:background="#F2F2F2" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#1FBAF3" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/ly_return"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/img_return"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/back"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="旧密码:"
            android:textColor="#7B7B7B"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/old_psw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ."
            android:enabled="true"
            android:gravity="center"
            android:hint="若包含字母，请区分大小写"
            android:maxLength="10"
            android:maxLines="1"
            android:password="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="新密码:"
            android:textColor="#7B7B7B"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/new_psw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ."
            android:enabled="true"
            android:gravity="center"
            android:hint="数字 、字母和.组成(3~10位以内)"
            android:maxLength="10"
            android:maxLines="1"
            android:password="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="确认密码:"
            android:textColor="#7B7B7B"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/new_psw2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ."
            android:enabled="true"
            android:gravity="center"
            android:hint="数字 、字母和.组成(3~10位以内)"
            android:maxLength="10"
            android:maxLines="1"
            android:password="true" />

        <Button
            android:id="@+id/bt_sumbit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_login"
            android:text="确认"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <CheckBox
                android:layout_marginLeft="15dp"
                android:id="@+id/psw_check"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示密码"
                android:layout_gravity="center_vertical"
                android:textColor="#7B7B7B"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>